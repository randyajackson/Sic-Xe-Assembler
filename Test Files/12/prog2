INIT_ARRAY	START	100

		LDA	ZERO
		STA	VALUE2ST

		LDA	ZERO
		STA	INDEX
		LDX	INDEX

LOOP_START	LDA	VALUE2ST
		ADD	ONE
		STA	VALUE2ST

		LDX	INDEX
		STA	SRC_ARRAY,X

		LDA	INDEX
		ADD	THREE
		STA	INDEX
		COMP	THIRTY

		JLT	LOOP_START

VALUE2ST	RESW	1
INDEX		RESW	1
SRC_ARRAY	RESW	10

ZERO		WORD	0
ONE		WORD	1
THREE		WORD	3
THIRTY		WORD	30

		END	INIT_ARRAY
