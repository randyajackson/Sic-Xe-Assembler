STRCPY		START 100	.LOAD THE PROGRAM AT LOC 100
		LDX ZERO	.X<--(ZERO)

LOOP_START 	LDCH STR1,X	.A<--STR1[X]
		STCH STR2,X	.STR2[X]<--(A)
		TIX STR1_LEN	.X <--(X) + 1; (X) : (STR1_LEN,STR1_LEN+1,STR1_LEN+2)
		JLT LOOP_START	.IF CC IS SET TO <, THEN JUMP TO LOOP_START

STR1		BYTE C'AMFEELINGSIC'	.A STRING OF 14 CHARACTERS
STR2		RESB 14			.RESERVE 14 BYTES FOR DESTINATION STRING
STR1_LEN	WORD 14			.LENGTH OF STR1 IS 14
ZERO		WORD 0			.DEFINE A CONSTANT NAMED ZERO INITIALIZED TO 0
		
		END STRCPY		.END
 
